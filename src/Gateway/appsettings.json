{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "ingestion-route": {
        "ClusterId": "ingestion-cluster",
        "Match": {
          "Path": "/api/ingestion/{**catch-all}"
        }
      },
      "ocr-route": {
        "ClusterId": "ocr-cluster",
        "Match": {
          "Path": "/api/ocr/{**catch-all}"
        }
      },
      "validation-route": {
        "ClusterId": "validation-cluster",
        "Match": {
          "Path": "/api/validation/{**catch-all}"
        }
      },
      "analysis-route": {
        "ClusterId": "analysis-cluster",
        "Match": {
          "Path": "/api/analysis/{**catch-all}"
        }
      },
      "notification-route": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/api/notification/{**catch-all}"
        }
      },
      "dashboard-route": {
        "ClusterId": "analysis-cluster",
        "Match": {
          "Path": "/api/dashboard/{**catch-all}"
        }
      },
      "reimbursement-route": {
        "ClusterId": "ingestion-cluster",
        "Match": {
          "Path": "/api/reimbursement/{**catch-all}"
        }
      },
      "upload-route": {
        "ClusterId": "ingestion-cluster",
        "Match": {
          "Path": "/api/upload/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "ingestion-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7001/"
          }
        }
      },
      "ocr-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7002/"
          }
        }
      },
      "validation-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7003/"
          }
        }
      },
      "analysis-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7004/"
          }
        }
      },
      "notification-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7005/"
          }
        }
      }
    }
  },
  "AzureAd": {
    "Authority": "https://login.microsoftonline.com/{tenant-id}",
    "Audience": "{client-id}"
  }
}
